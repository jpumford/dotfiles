" fix for gitgutter using /bin/sh
set shell=$SHELL

set shiftwidth=4
set tabstop=4
set noexpandtab

" destroy relative numbering!
set norelativenumber

" remove tab highlighting
set nolist

set whichwrap=<,>,[,]   " Backspace and cursor keys don't wrap

set wrap " keep linewrapping

set nolinebreak " wrap at the last character

set textwidth=0 " remove autobreaking of text at any length

set wrapmargin=0
